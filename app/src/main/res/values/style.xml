<?xml version="1.0" encoding="utf-8"?>
<resources>



    <style name="CustomButtonStyle">
        <item name="android:background">@color/mineral_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyOutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@android:color/transparent</item>
        <item name="strokeWidth">0dp</item>
        <item name="android:textColor">@color/mineral_green</item>
    </style>

    <style name="MyOutlinedButton.Disabled" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/gray</item>
        <item name="strokeWidth">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="CustomTextInputLogin" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/mineral_green</item>
        <item name="colorControlActivated">@color/mineral_green</item>
    </style>

    <style name="ProductNameStyle">
        <item name="android:textColor">#232427</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">serif</item>
    </style>


    <style name="ProductDetailRowHeaderType">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">#006769</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="ProductDetailRowDataType">
        <item name="android:fontFamily">serif</item>
        <item name="android:textColor">@color/green_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>


</resources>