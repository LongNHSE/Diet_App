<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/food_fact_container"
        android:elevation="10dp"
        android:orientation="vertical"
        android:padding="5dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">


        <ImageView
            android:id="@+id/iv_food_fact"
            android:layout_width="140dp"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/tv_food_fact_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Apples"
            android:textColor="#3E3E3E"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_food_fact_description"
            android:layout_width="140dp"
            android:layout_height="120dp"
            android:fontFamily="serif"
            android:padding="10dp"
            android:text="There are over 7,500 varieties of apples grown around the world. Each apple floats because it is 25% air."
            android:textColor="#3E3E3E"
            android:textSize="11sp" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
